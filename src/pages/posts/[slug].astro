---
import BaseLayout from '../../layouts/BaseLayout.astro';
import posts from '../../data/posts.json';

const slug = Astro.params.slug;
const post = posts.find(p => p.slug === slug);

if (!post) {
  throw new Error('Post no encontrado');
}
---

<BaseLayout title={post.titulo}>
  <h1 style="color:#2c3e50;">{post.titulo}</h1>
  <p style="color:#888;">Por {post.autor} â€“ {post.fecha}</p>
  <img src={post.imagen} alt={post.titulo} style="width:100%; border-radius: 10px; margin-bottom:1rem;" />
  <p>{post.descripcion}</p>
  <article style="line-height:1.6; margin-top:1rem;">
    <p>{post.contenido}</p>
  </article>
</BaseLayout>
