---
import posts from '../../data/posts.json';

export async function getStaticPaths() {
  return {
    paths: posts.map(post => ({
      params: { slug: post.slug },
      props: { post }
    }))
  };
}

const { post } = Astro.props;
---

<html>
  <head>
    <title>{post.titulo}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        max-width: 700px;
        margin: auto;
        padding: 2rem;
        background: #fafafa;
        color: #333;
      }
      img {
        width: 100%;
        height: auto;
        border-radius: 10px;
        margin-bottom: 1rem;
      }
      h1 {
        font-size: 2rem;
        color: #2c3e50;
      }
      .meta {
        color: #888;
        font-size: 0.9rem;
        margin-bottom: 1rem;
      }
      article {
        line-height: 1.6;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <h1>{post.titulo}</h1>
    <p class="meta">Por {post.autor} â€“ {post.fecha}</p>
    <img src={post.imagen} alt={post.titulo} />
    <p>{post.descripcion}</p>
    <article>
      <p>{post.contenido}</p>
    </article>
  </body>
</html>
